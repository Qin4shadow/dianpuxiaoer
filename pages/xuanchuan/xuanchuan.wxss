.content{
  display: flex; padding: 15rpx0; border: 1px dashed #f4f4f4;
  justify-content: space-between;
}
.content .pic{
  width: 230rpx; height: 150rpx;
}
.content .pic image{
  width: 100%; height: 100%;
}
.content .txt{
  width: 440rpx;display: flex; flex-direction: column;
  justify-content: space-between;
}
.content .title{
  font-size: 34rpx;
}
.content .info{
  font-size: 24rpx;
}
.content .info text{
  font-size: 22rpx;
}