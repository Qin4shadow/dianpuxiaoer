.header{
  width: 750rpx;
  height: 90rpx;
}
.hdCon{
  display: flex;
  justify-content: space-between;
  height: 100%;
  align-items: center;
}
.hdCon image{
  height: 50rpx;
  width: 50rpx;
}
.kefu{
  position: relative;
  animation: dh linear 1s infinite;
}
.kefu .btn{
  position: absolute; width: 100%; height: 100%; top: 0; left: 0;
  opacity: 0;  
}
/* fenlei */
.majorCon{
  display: flex; padding: 20rpx 0;
} 
.box{
  text-align: center; padding: 0 20rpx;
}
.box image{
  width: 150rpx; height: 150rpx;
}
.major .txt{
  font-size: 40rpx;
}

/* shangpin */
.shops{
  background: #f0f3f8;
  padding:90rpx 20rpx 70rpx 20rpx;
}


.wkMain{
display: flex;flex-wrap: wrap;justify-content: space-between;
}
.wkMain .box{
  width: 320rpx;height: 214rpx;margin-bottom: 10rpx;
  position: relative;
}
.wkMain .pic{
  width: 100%;height: 100%;
}
.wkMain .ceng{
  width: 100%;height: 100%;background: rgba(0,0,0,0.3);
  position: absolute;left: 0; top: 0;
  color: white;display: flex;flex-direction: column;
  justify-content: center;align-items: center;
  padding: 0 20rpx;box-sizing: border-box;text-align: center;
}
.wkMain .ceng .title{
  font-size: 48rpx;
}
.wkMain .ceng .line{
  width: 50rpx;height: 2rpx;background: white;margin: 10rpx 0 20rpx;
}
.wkMain .ceng .des{
  opacity: 0.6;text-transform: uppercase;
  font-size: 30rpx;letter-spacing: 5rpx;
}

/* dibu */
.footer{
  padding: 30rpx 0; background: #f2f2f2; text-align: center;
}
.footer .pic{
  width: 180rpx;
}
.footer .text{
  font-size: 25rpx;  color: #666;
}